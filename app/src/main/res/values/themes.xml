<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--主要的品牌颜色-->
        <item name="colorPrimary">@color/purple_500</item>
        <!--主要品牌颜色的较浅变体，在主题中很少使用-->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!--用于显示在原色上方的元素的颜色(比如按钮字体的颜色)-->
        <item name="colorOnPrimary">@color/white</item>
        <!--次要品牌色彩 例如SwitchMaterial的选中  比如悬浮按钮-->
        <item name="colorSecondary">#00FFE7</item>
        <!--次要品牌色彩的较浅变体，在主题中很少使用-->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!--用户显示在辅助颜色顶部的元素的颜色，类似于${colorOnPrimary}-->
        <item name="colorOnSecondary">@color/black</item>
        <!--用于错误的颜色-->
        <item name="colorError">#F44336</item>
        <!--错误顶部和类似于${colorOnPrimary}类似-->
        <item name="colorOnError">#FFFFFF</item>
        <!--用户表面的颜色  比如CardView，例如SwitchMaterial的No选中，tabView的背景-->
        <item name="colorSurface">#00FF0A</item>
        <!--用户表面的颜色顶部${colorOnPrimary},类似，比如Imageview的描边颜色，未选中的字体颜色，选中则是colorPrimary,和默认颜色相对-->
        <item name="colorOnSurface">#FFC400</item>
        <!--所有其他屏幕内容后面的颜色-->
        <item name="android:colorBackground">#ffffff</item>
        <!--用于显示在背景色上方的元素的颜色-->
        <item name="colorOnBackground">#DA00FF</item>
    </style>
</resources>